{
  "application": {
    "name": "Music AI Application",
    "version": "1.0.0",
    "host": "0.0.0.0",
    "port": 5000,
    "debug": true
  },
  "output": {
    "base_directory": "output",
    "subdirectories": {
      "songs": "songs",
      "images": "images",
      "videos": "videos"
    },
    "file_formats": {
      "audio": "mid",
      "image": "png",
      "lyrics": "txt"
    }
  },
  "generation": {
    "max_quantity": 10,
    "default_quantity": 1,
    "image_size": [800, 800],
    "midi_duration_bars": 32,
    "beats_per_bar": 4
  },
  "evolution": {
    "enabled": true,
    "stats_file": "evolution_stats.json",
    "history_limit": 100,
    "score_multiplier": 10
  },
  "customization": {
    "genres": [
      "pop",
      "rock",
      "jazz",
      "classical",
      "electronic",
      "hip-hop",
      "country",
      "blues"
    ],
    "moods": [
      "happy",
      "sad",
      "energetic",
      "calm",
      "romantic",
      "dark",
      "uplifting"
    ],
    "tempos": [
      "slow",
      "medium",
      "fast",
      "variable"
    ],
    "keys": [
      "C", "C#", "D", "D#", "E", "F",
      "F#", "G", "G#", "A", "A#", "B"
    ],
    "styles": [
      "acoustic",
      "electric",
      "orchestral",
      "synthetic",
      "mixed"
    ]
  }
}
